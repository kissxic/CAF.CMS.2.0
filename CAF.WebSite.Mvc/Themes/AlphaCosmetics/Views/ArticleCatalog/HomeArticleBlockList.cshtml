@model ArticleCategoryModel
@using CAF.Infrastructure.Core.Collections
@{

}
@if (Model.Articles.Count > 0)
{
    <ol class='list-none metlist'>
        @for (int i = 0; i < Model.Articles.Count; i++)
        {
            var article = Model.Articles[i];
            <li class='list top'>
                <span class='time'>@article.PostCreatedOnStr</span>
                <a href='@Url.RouteUrl("Article", new { SeName = article.SeName })' title='@article.Title' target='_self'>@article.Title</a>
                <img class='listnew' src='/Themes/AlphaCosmetics/Content/images/news.gif' alt='@article.DefaultPictureModel.AlternateText' />
            </li>
        }
    </ol>
}
