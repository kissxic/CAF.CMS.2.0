@using CAF.WebSite.Application.WebUI.UI;
@using CAF.Infrastructure.Core;
@{
    Layout = "~/Views/Shared/_Layout.Head.cshtml";
    var jqueryCssRootPath = "~/Themes/AlphaDefault/Content/";

    Html.AppendCssFileParts(ResourceLocation.Head,
        jqueryCssRootPath + "css/Category.css",
        jqueryCssRootPath + "css/detailpage.css",
        jqueryCssRootPath + "css/Service.css");
}



@if (IsSectionDefined("header"))
{
    @RenderSection("header")
}
else
{
    @Html.Action("SiteBar", "Common", new { area = "" })
    <div class="Cate_top_bg">
        <div class="warp">
            <a href="http://www.goodyao.com/yyxx/index.html" class="fl">
                <img class="Cate_logo" src="http://www.goodyao.com/application/views/images/Logo_category.png" alt="" />
            </a>
            <div class="Cate_serach_box fl">
                <div class="Cate_serach">
                    <input type="text" id="searchContent" class="Cate_serach_text fl" />
                    <input type="button" style="cursor: pointer;" onclick="search()" value="" class="Cate_serach_sub fl" />
                </div>
                <p id="hotvalue">
                    <a href="#" onclick="searchByHotValue('招商')">招商</a>|<a href="#" onclick="searchByHotValue('代理')">代理</a>|<a href="#" onclick="searchByHotValue('供应')">供应</a>|
                    <a href="#" onclick="searchByHotValue('求购')">求购</a>|<a href="#" onclick="searchByHotValue('转让')">转让</a>|<a href="#" onclick="searchByHotValue('培训')">培训</a>|
                    <a href="#" onclick="searchByHotValue('招聘')">招聘</a>|<a href="#" onclick="searchByHotValue('求职')">求职</a>|<a href="#" onclick="searchByHotValue('展会')">展会</a>
                </p>
            </div>
            <a href='http://www.goodyao.com/yyxx/publishDetailsInfo?crt_table_name=classification_zs' class='Cate_Release fr'>免费发布信息</a>
        </div>
    </div>
}
<div class="memberbg">
    <div class="membercontent">
        <!--左侧导航及个人信息-->
        <div class="member_left">
            @if (IsSectionDefined("left"))
            {
                @Html.Action("MyAccount", "Member", new { area = "" })
                @RenderSection("left")
            }
            else
            {

            }
        </div>
        <!--右侧内容-->
        <!--中间内容S-->

        <div class="member_right">
            @RenderBody()
        </div>
        <!--中间内容E-->
        <span class="clr"></span>
    </div>
</div>
<!--中间内容E-->
<!--底部-->
@if (IsSectionDefined("footer"))
{
    @RenderSection("footer")
}
else
{
    @Html.Partial("_Footer");
    @Html.Action("Footer", "Common", new { area = "" })
}
<!--底部-->
@if (IsSectionDefined("FootScript"))
{
    @RenderSection("FootScript", required: false)
}
else
{

}

