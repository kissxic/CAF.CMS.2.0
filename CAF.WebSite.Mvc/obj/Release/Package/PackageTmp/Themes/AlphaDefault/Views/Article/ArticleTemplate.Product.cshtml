                    if (oscrollTop <= 500) {
                        idbox[0].style.display = "none";
                    } else {
                        idbox[0].style.display = "block";
                    }
                }
            });
            $(function () {
                var _mtop = parseInt($('#floatnum').css('top'));
                function telRoll2() {
                    _mtop += 68;
                    $('#floatnum').stop(true, false).animate({ 'top': _mtop }, 300, function () {
                        if (_mtop >= 0) {
                            _mtop = -136;
                            $('#floatnum').css('top', _mtop)
                        };
                    });
                }
                var mytel2 = setInterval(telRoll2, 3000);
                $('#floatnum').hover(function () {
                    clearInterval(mytel2);
                }, function () {
                    mytel2 = setInterval(telRoll2, 3000);
