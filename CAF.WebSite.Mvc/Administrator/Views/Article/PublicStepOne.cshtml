                <div class="row">
                    <div class="StepOne-con clearfix">
                        <div id="id_a" class="ancestor"></div>
                        <div class="sidebar sidebar1"></div>
                        <div id="id_b" class="father"></div>
                        <div class="sidebar sidebar2"></div>
                        <div id="id_c" class="child"></div>
                        <div class="sidebar sidebar3 Sclear-P33"></div>
                        <div id="id_d" class="tory"><div class="sidebar"></div></div>
