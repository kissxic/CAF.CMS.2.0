@model CAF.WebSite.Mvc.Admin.Models.Articles.ArticleModel
@{
    //page title
    Layout = "~/Administrator/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = T("Admin.ContentManagement.Articles.EditArticleDetails").Text;
}

@using (Html.BeginForm("Edit", "Article", new { btnId = ViewBag.btnId, formId = ViewBag.formId }, FormMethod.Post, new { id = "article-form" }))
{
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light">
                <div class="section-header sticky">
                    <div class="caption">
                        <i class="icon-equalizer font-red-sunglo"></i>
                        <span class="caption-subject font-red-sunglo bold uppercase"> @T("Admin.ContentManagement.Articles.EditArticleDetails") </span>
                        @if (Model.CategoryShowType == CAF.Infrastructure.Core.Domain.Cms.Channels.CategoryShowType.LeftNavigationt)
                        {
                            <span class="caption-helper">@Html.ActionLink("(" + T("Admin.Common.BackToList") + ")", "Center", new { SearchCategoryId = Model.CategoryId })</span>
                        }
                        else
                        {
                            <span class="caption-helper">@Html.ActionLink("(" + T("Admin.Common.BackToList") + ")", "Center", new { SearchChannelId = Model.ChannelId })</span>
                        }
                    </div>
                    <div class="actions">
                        <button type="submit" name="save" value="save" class="btn btn-primary"><i class="fa fa-check"></i>@T("Admin.Common.Save")</button>
                        <button type="submit" name="save" value="save-continue" class="btn blue-madison">@T("Admin.Common.SaveContinue")</button>
                        <button type="submit" name="save" value="save-create" class="btn yellow"><i class="fa fa-plus"></i>@T("Admin.Common.SaveCreate")</button>
                        <a class="btn btn-danger" data-toggle="modal" href="#articlemodel-delete-confirmation">
                            <i class="fa fa-trash-o"></i>&nbsp;@T("Admin.Common.Delete")
                        </a>
                    </div>
                </div>
                <div class="portlet-body form form-horizontal form-bordered form-row-stripped">
                    @Html.Partial("_CreateOrUpdate", Model)
                </div>
            </div>
        </div>
    </div>

}
@Html.DeleteConfirmation("articleitem-delete")