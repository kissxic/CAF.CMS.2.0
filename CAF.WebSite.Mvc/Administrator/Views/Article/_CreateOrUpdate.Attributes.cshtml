                        var _obj = {};
                        _obj.name = $(mm).find("a").html();
                        _obj.type = type[k].name;
                        _obj.typeid = $(mm).data("aid");
                        _obj.color = $(mm).data("color");
                        ch_arr.push(_obj);
                    });
                    for (var i = 0; i < narr.length; i++) {
                        for (var j = 0; j < narr[i].ch.length; j++) {
                            var tmp = narr[i].ch;
                            tmp[j].ch = ch_arr;
                        }
                    }
                }

            }

        })
