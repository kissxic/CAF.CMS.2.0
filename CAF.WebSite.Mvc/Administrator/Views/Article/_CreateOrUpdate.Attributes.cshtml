    }
    //禁用已经选择的选项
    function selectDisabled() {
        var arr = $('select.chosen-select');
        var narr = [];
        var typeIds = gettypeId();
        $.each(arr, function (k, v) {
            var options = $(v).find("option");
            $.each(options, function (opk, opv) {
                if ($.inArray($(opv).val(), typeIds) > -1) {
                    $(opv).attr("disabled", "disabled");
                }
                else {
                    $(opv).removeAttr("disabled");
                }
            })
        })
    }
