@model ModelTemplateModel
@using CAF.Infrastructure.Core.Domain.Cms.Articles;
@Html.ValidationSummary(false)
<script type="text/javascript">
    $(document).ready(function () {


    });
</script>
@Html.HiddenFor(model => model.Id)
<div class="form-body">
    <div class="form-group">
        <label class="control-label col-md-3">
            @Html.LangLabelFor(model => model.TemplageTypeId)
        </label>
        <div class="col-md-3">
            @Html.DropDownListFor(model => model.TemplageTypeId, ((TemplateTypeFormat)Model.TemplageTypeId).ToSelectList(), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TemplageTypeId)

        </div>
    </div>
    <div class="form-group">
          <label class="control-label col-md-3">
            @Html.LangLabelFor(model => model.Name)
        </label>
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name)

        </div>
    </div>
    <div class="form-group">
          <label class="control-label col-md-3">
            @Html.LangLabelFor(model => model.ViewPath)
        </label>
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.ViewPath, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ViewPath)

        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">
            @Html.LangLabelFor(model => model.DisplayOrder)
        </label>
        <div class="col-md-3">
            @Html.EditorFor(model => model.DisplayOrder)
            @Html.ValidationMessageFor(model => model.DisplayOrder)

        </div>
    </div>

</div>