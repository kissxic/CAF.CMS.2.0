@model BannerInfoModel
@{
    Layout = "~/Administrator/Views/Shared/_AdminLayout.cshtml";
    var gridPageSize = EngineContext.Current.Resolve<CAF.Infrastructure.Core.Domain.Common.AdminAreaSettings>().GridPageSize;
    //page title
    ViewBag.Title = T("Admin.ContentManagement.Topics").Text;
    var g = Html.GridToolKit();
    var grid = g.DataGrid("navigationGrid", g.Param(x => x.Id)).TableId("table-id").GridKey("Id").Pager(false)
    .MainGrid(
    g.GridColumn(x => x.Name, 300).DefaultContent("<a href=\"NavigationEdit/#Id#\">#Name#</a>"),
    g.GridColumn(x => x.Url, 300),
    g.GridColumn(x => x.DisplayOrder, 300),
    g.GridColumn("operation", "" + T("Admin.Common.Operation").Text + "", 100).DefaultContent("<a href='NavigationEdit/#Id#' class='btn default btn-xs purple'><i class='fa fa-edit'></i></a>"))
    .Url(Url.Action("NavigationList", "PageSettings")).DefaultTableClass();
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet light">
            <div class="section-header sticky">
                <div class="caption">
                    <i class="icon-equalizer font-red-sunglo"></i>
                    <span class="caption-subject font-red-sunglo bold uppercase"> 菜单列表</span>
                    <span class="caption-helper">@Html.ActionLink("(" + T("Admin.Common.BackToList") + ")", "Index")</span>
                </div>
                <div class="tools">

                </div>
                <div class="actions">
                    <a href="@Url.Action("NavigationCreate")" class="btn yellow"><i class="fa fa-plus"></i>@T("Admin.Common.AddNew") </a>
                </div>
            </div>
           
            <div class="portlet-body flip-scroll">
                <table id="@grid.GetTableId" class="@grid.GetDefaultTableClass" @Html.Raw(grid.GetFixedLayout ? "style='table-layout:fixed'" : "")>
                    <thead>
                        <tr>
                            @foreach (var column in grid.GetColumns)
                            {
                                if (column.Name == "操作")
                                {

                                    <th class="@column.CssClassHeader">@column.DisplayName</th>

                                }
                                else if (column.DisplayName == null)
                                {

                                    <th class="@column.CssClassHeader"><input type="checkbox" class="group-checkable" data-set="checkboxes">@T("Admin.Configuration.ActivityLog.ActivityLogType.Fields.Enabled")</th>
                                }
                                else
                                {
                                    <th class="@column.CssClassHeader">@column.DisplayName</th>
                                }

                            }
                        </tr>

                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    
    @(grid)
    $(document).ready(function () {

        //search button
        $('#btnSearch').click(function () {
            //search
            var grid = navigationGrid.reload();
            return false;
        });
    });


</script>