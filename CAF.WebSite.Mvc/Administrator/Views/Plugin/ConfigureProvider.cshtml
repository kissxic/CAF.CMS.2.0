@model ProviderModel

@{    
    ViewBag.Title = T("Admin.Common.Configure").Text + " - " + Model.FriendlyName;
}
<div class="row">
    <div class="col-md-12">
        <div class="portlet light">
            <div class="section-header sticky">
                <div class="caption">
                    <img src="@Url.Content(Model.IconUrl)" alt="@Model.FriendlyName" />
                    <span class="caption-subject font-red-sunglo bold uppercase">@ViewBag.Title <span class="muted">(@(Model.SystemName))</span> </span>
                    <span class="caption-helper"><a href='@Url.Action("List")'>(@T("Admin.Common.BackToList"))</a></span>
                </div>
                <div class="actions">
                    @if (Model.PluginDescriptor != null)
                    {
                        <a class="btn btn-default" href='@Url.Action("UpdateStringResources", "Plugin", new { systemName = Model.PluginDescriptor.SystemName, returnUrl = Request.RawUrl })'>
                            <i class="fa fa-refresh"></i>
                            @T("Admin.Configuration.Plugins.Resources.Update")
                        </a>
                    }
                </div>
            </div>
            <div class="portlet-body form form-horizontal form-bordered form-row-stripped">
               
                @if (Model.ConfigurationRoute != null && Model.ConfigurationRoute.Action.HasValue())
                {
                    @Html.Action(Model.ConfigurationRoute.Action, Model.ConfigurationRoute.Controller, Model.ConfigurationRoute.RouteValues);
                }
                else
                {
                    @T("Admin.Common.ConfigurationNotRequired")
                }
            </div>
        </div>
    </div>
</div>

