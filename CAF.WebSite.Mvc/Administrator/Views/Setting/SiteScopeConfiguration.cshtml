<div class="form-body">
    <div class="form-group">
        <label class="control-label col-md-3">@T("Admin.Configuration.Settings.SiteScope")</label>
        <div class="col-md-3">
            @Html.DropDownList("site-scope-configuration", Model.AllSites, new { @class = "form-control", onchange = "setLocation(this.value);" })
        </div>
    </div>
    @if (Model.SiteId > 0)
    {
        <div class="form-group">
            <label class="control-label col-md-3"></label>
            <div class="col-md-6">
                <input type="checkbox" onclick="Admin.checkAllOverriddenSiteValue(this)">
                <span>@T("Admin.Configuration.Settings.SiteScope.CheckAll")</span>
                <span class="hint">(@(T("Admin.Configuration.Settings.SiteScope.CheckAll.Hint")))</span>
            </div>
        </div>     
    }
</div>

<script>
    $(function () {
        $('#site-scope-configuration').selectWrapper();
    });
</script>