                            },
                            error:function (xhr, ajaxOptions, thrownError){
                                alert('@T("Seller.Catalog.Products.Pictures.AddFailed")')
                            }
                        });

                    });

                    // Add the button to the file preview element.
                    file.previewElement.appendChild(removeButton);
                }
            }
        };
    });

</script>
