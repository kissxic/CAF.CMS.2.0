            MediaRootPath + "global/plugins/jquery-tags-input/jquery.tagsinput.js",
            MediaRootPath + "global/scripts/metronic.js",
            MediaRootPath + "admin/layout/scripts/layout.js",
            MediaRootPath + "admin/layout/scripts/quick-sidebar.js",
            MediaRootPath + "global/plugins/layer/layer.js",

            "~/Content/custom/bootstrap-colorpicker/js/bootstrap-colorpicker.js",
            "~/Content/custom/bootstrap-colorpicker/js/bootstrap-colorpicker-globalinit.js",


