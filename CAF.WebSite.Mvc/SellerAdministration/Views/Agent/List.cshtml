@model ArticleAgnetModel

@{
    var gridPageSize = EngineContext.Current.Resolve<CAF.Infrastructure.Core.Domain.Common.AdminAreaSettings>().GridPageSize;

    //page title
    ViewBag.Title = "会员咨询列表";
    int? filterByArticleId = ViewBag.FilterByArticleId;

    var g = Html.GridToolKit();
    var grid = g.DataGrid("AgentGrid", g.Param(x => x.Id)).TableId("table-id").GridKey("Id").PageLength(gridPageSize)
    .MainGrid(
    g.GridColumn("ArticleTitle", "咨询商品", 200).DefaultContent("<a href='#Url#' >#ArticleTitle# <i class='fa fa-edit'></i></a>"),
    g.GridColumn("TrueName", "联系人", 100),
    g.GridColumn("Mobile", "电话", 100),
    g.GridColumn("QQ", "QQ", 100),
    g.GridColumn("Email", "邮箱", 100),
    g.GridColumn("CreatedOnUtc", "咨询时间", 100).DefaultContent("#CreatedOn-DateTime#"),
    g.GridColumn("operation", "" + T("Admin.Common.Operation").Text + "", 50).DefaultContent("<a href='Detail/#Id#' class='btn default btn-xs purple'><i class='fa fa-edit'></i></a><a href='Delete/#Id#' class='btn default btn-xs black delete'><i class='fa fa-trash-o'></i></a>"))
    .Url(Url.Action("List", "Agent")).DefaultTableClass();
}
<script type="text/javascript">
    $(document).ready(function () {
        @(grid)

    });
</script>
<div class="row">
    <div class="col-md-12">
        <div class="portlet light">
            <div class="section-header sticky">
                <div class="caption">
                    <i class="icon-equalizer font-red-sunglo"></i>
                    <span class="caption-subject font-red-sunglo bold uppercase">会员咨询</span>
                    <span class="caption-helper"></span>
                </div>

            </div>
            <div class="portlet-body flip-scroll">
                <table id="@grid.GetTableId" class="@grid.GetDefaultTableClass" @Html.Raw(grid.GetFixedLayout ? "style='table-layout:fixed'" : "")>
                    <thead>
                        <tr>
                            @foreach (var column in grid.GetColumns)
                            {
                                if (column.Name == "" + T("Admin.Common.Edit").Text + "")
                                {

                            <th class="@column.CssClassHeader">@column.DisplayName</th>

                                }
                                else
                                {
                            <th class="@column.CssClassHeader">@column.DisplayName</th>
                                }

                            }
                        </tr>

                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
